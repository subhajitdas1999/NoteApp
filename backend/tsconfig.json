{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",

    "baseUrl": "./src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@validators/*": ["validators/*"]
    },

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true
  }
}
